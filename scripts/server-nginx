#! /bin/bash

# 1. VARIABLES +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

ACTION="$1"

# 1. END +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

# 2. SCRIPT ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

# 2.1. START -------------------------------------------------------------------

if [ $ACTION = "start" ]
then
  echo "- Start NGINX";
  sudo systemctl start nginx && echo "-- ✅ Started";
fi

# 2.1. END ---------------------------------------------------------------------

# 2.2. RESTART -----------------------------------------------------------------

if [ $ACTION = "restart" ]
then
  echo "- Restart NGINX";
  sudo systemctl restart nginx && echo "-- ✅ Restarted";
fi

# 2.2. END ---------------------------------------------------------------------

# 2.3. RESTART -----------------------------------------------------------------

if [ $ACTION = "stop" ]
then
  echo "- Stop NGINX";
  sudo systemctl stop nginx && echo "-- ✅ Stopped";
fi

# 2.3. END ---------------------------------------------------------------------

# 2. END +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++